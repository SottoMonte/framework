<?xml version="1.0" encoding="UTF-8"?>
<Column size="full">
    <Row color="#fcfcfc" width="250px" size="expand" class="border-end">
        <Container position="fixed" start="0">
            <Route url="application/view/page/orakom/dashboard.xml">
                <Text><Icon icon="bi-view-list" color="white" />Overview</Text>
            </Route>
            <Route url="application/view/page/orakom/clients.xml">
                <Text><Icon icon="bi-people" color="white" />Clients</Text>
            </Route>
            <Route url="application/view/page/orakom/contracts.xml">
                <Text><Icon icon="bi-pass" color="white" />Contracts</Text>
            </Route>
            <Route url="application/view/page/orakom/invoices.xml">
                <Text><Icon icon="bi-receipt" color="white" />Invoices</Text>
            </Route>
        </Container>
    </Row>
    <Row size="fluid">
        <Column margin="m-5">
            <Row size="full">
                <Text type="h1">{% block title %}{% endblock %}</Text>
                <Text>{% block subtitle %}{% endblock %}</Text>
            </Row>
            <Container>{% block action %}{% endblock %}</Container>
        </Column>
        <Row id="alert-container" type="container-fluid">
            <Alert type="danger">Errore</Alert>
        </Row>
        {% block content %}
        {% endblock %}
    </Row>
</Column>