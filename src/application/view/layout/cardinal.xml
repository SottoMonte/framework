<?xml version="1.0" encoding="UTF-8"?>
<Column size="full">
    <Row color="#fcfcfc" width="auto" class="border-end">
        {% block west %}
        {% endblock %}
    </Row>
    <Row size="fluid" padding="p-0" margin="m-0">
        <Column size="fluid" color="#fcfcfc" height="auto" class="border-bottom">
            {% block north %}
            {% endblock %}
        </Column>
        <Column size="expanded">
            {% block center %}
            {% endblock %}
        </Column>
        <Column size="fluid" color="#fcfcfc" height="auto" class="border-top">
            {% block south %}
            {% endblock %}
        </Column>
    </Row>
    <Row color="#fcfcfc" width="auto" class="border-start">
        {% block east %}
        {% endblock %}
    </Row>
</Column>