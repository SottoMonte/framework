<?xml version="1.0" encoding="UTF-8"?>
<Row color="#f8f8f8" class="w-100"  margin="m-0" padding="p-0" >
    <Column color="#fbfbfb" height="auto" padding="px-3;py-1" margin="m-0" class="border-bottom" style="z-index:0;position:unset;">
        <Column>
            <Graph src="static/logo.svg" />
        </Column>
        <Column>
            <Action url="application/view/page/company/overview.xml"><Graph icon="bi-people-fill"/><Text>Colosso</Text></Action>
            <Action url="application/view/page/inventory/overview.xml"><Graph icon="bi-basket3-fill"/><Text>Inventory</Text></Action>
            <Action url="application/view/layout/main.xml"><Graph icon="bi-shield-fill"/><Text>Security</Text></Action>
            <Action url=""><Graph icon="bi-easel-fill"/><Text>Monitoring</Text></Action>
            <Action url="application/view/page/cubute/overview.xml"><Graph icon="bi-box2-fill"/><Text>Cubute</Text></Action>
            <Action url=""><Graph icon="bi-mortarboard-fill"/><Text>Academy</Text></Action>
            <Action url=""><Graph icon="bi-rocket-takeoff-fill"/><Text>Partnership</Text></Action>
            <Action url="application/view/page/forum/overview.xml"><Graph icon="bi-bank2"/><Text>Forum</Text></Action>
            <Action url=""><Graph icon="bi-building-fill"/><Text>Facility</Text></Action>
        </Column>
        <Column size="auto" content="end" alignment="center" >
            <Action id="button3" data-bs-toggle="offcanvas" size="sm" data-bs-target="#profile" padding="p-0">
                <Column alignment="center">
                    <Graph icon="bi-inbox-fill" color="white"/>
                    <Graph icon="bi-question-circle-fill" color="white"/>
                    <Graph src="{{ user.avatar or 'static/logo.svg' }}" margin="mx-2" width="40px" height="40px" class="rounded-2 border" />
                    <Text>{{ user.username or 'NaM' }}</Text>
                </Column>  
            </Action>
            <Window id="profile" type="canvas" title="Logout" >
                <Column alignment="center">
                    <Action size="sm" data-bs-dismiss="offcanvas" >
                        <Column alignment="center">
                            <Graph src="{{ user.avatar or 'static/logo.svg' }}" margin="mx-2" width="40px" height="40px" class="rounded-2 border" />
                            <Text color="black" >{{ user.username or 'NaM' }}</Text>
                        </Column>
                    </Action>
                    <Action id="button2" icon="REMOVE" size="sm" target="#exampleModal" class=" d-inline" ><Graph icon="bi-box-arrow-right"/></Action>
                </Column>
                <Container class="border-top" padding="p-0">
                    <!-- TabNav -->
                    <Column margin="m-0" padding="p-0" class="border-bottom">
                        <Action href="#contracts" data-bs-toggle="tab"><Graph icon="bi-person-fill-gear"/><Text class="text-uppercase">Profile</Text></Action>
                        <Action href="#credit-notes" data-bs-toggle="tab"><Graph icon="bi-wallet-fill"/><Text class="text-uppercase">Wallet</Text></Action>
                        <Action href="#invoices" data-bs-toggle="tab"><Graph icon="bi-key-fill"/><Text class="text-uppercase">API</Text></Action>
                        <Action href="#calls" data-bs-toggle="tab"><Graph icon="bi-inbox-fill"/><Text class="text-uppercase">Box</Text></Action>
                    </Column>
                    <!-- Tab -->
                    <Group>
                        <Container id="contracts">
                            <Text>1</Text>
                        </Container>
                        <Container id="invoices">
                            <Text>2</Text>
                        </Container>
                        <Container id="credit-notes">
                            <Text>3</Text>
                        </Container>
                        <Container id="calls">
                            <Text>4</Text>
                        </Container>
                        <Container id="tickets">
                            <Text>5</Text>
                        </Container>
                        <Container id="historical">
                            <Text>6</Text>
                        </Container>
                    </Group>
                </Container>
            </Window>
            <Window id="exampleModal" type="modal" position="centered" size="sm" title="Logout" action="logout">
                <View url="application/view/content/form/logout.xml" />
            </Window>
        </Column>
    </Column>
    <Column id="main" type="main" margin="mb-auto" padding="p-0" class="overflow-auto" >
        
    </Column>
    <Container type="footer" color="#f1f1f1" class="border-top" size="fluid">
        <Container color="body">
            <Column content="center">
                <Text>Colosso Copyright Â© 2023. All rights reserved. </Text>
                <Text>Created with BuilderApp by Colosso</Text>
                <Text>Version 0.1.0</Text>
            </Column>
        </Container>
    </Container>
</Row>