{% extends "main.xml" %}
{% block title %}Overview{% endblock %}
{% block subtitle %}Keep track of your company{% endblock %}
{% block bar %}
<Action route="application/view/page/company/dashboard.xml">
    <Graph icon="bi-view-list" />
    <Text>Overview</Text>
</Action>
<Action route="application/view/page/company/clients.xml">
    <Graph icon="bi-people" />
    <Text>Clients</Text>
</Action>
<Action route="application/view/page/company/contracts.xml">
    <Graph icon="bi-pass" />
    <Text>Contracts</Text>
</Action>
<Action route="application/view/page/company/invoices.xml">
    <Graph icon="bi-receipt" />
    <Text>Invoices</Text>
</Action>
<Action route="application/view/page/company/invoices.xml">
    <Graph icon="bi-ticket-detailed" />
    <Text>Tickets</Text>
</Action>
<Action route="application/view/page/company/invoices.xml">
    <Graph icon="bi-rocket" />
    <Text>Partnership</Text>
</Action>
<Action route="application/view/page/company/invoices.xml">
    <Graph icon="bi-mortarboard" />
    <Text>Academy</Text>
</Action>
{% endblock %}
{% block content %}
<Container color="#fafafa" size="fluid" padding="p-4" expand="True" class="border-top border-bottom">
    <Input disabled="True"></Input>
</Container>
<Container color="#fafafa" size="fluid" margin="mt-4" padding="p-4" expand="True" class="border-top border-bottom">
    <Text>Ciao</Text>
</Container>
{% endblock %}