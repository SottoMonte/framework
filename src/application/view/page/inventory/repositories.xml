{% extends "sidebar.xml" %}
{% block title %}Overview{% endblock %}
{% block subtitle %}Keep track of your inventory{% endblock %}
{% block bar %}
<SideBar selected="application/view/page/inventory/repositories.xml"/>
{% endblock %}
{% block content %}
<Container background="#fafafa" size="fluid" padding="p-4" expand="True" class="border-top border-bottom">
    <Table repository="repository" view="repository" >
        <Text click="table(id:'{{ component or '' }}',sortField:'name')">Repository</Text>
        <Text>Description</Text>
        <Text>Type</Text>
        <Text>Platform</Text>
        <Text>Language</Text>
        <Text>Updated</Text>
        <Text>Actions</Text>
    </Table>
</Container>
{% endblock %}