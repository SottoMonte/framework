{% extends "cardinal.xml" %}
{% block west %}
<Column id="box" class="flex-wrap" style="font-size: 40px;" >
    <Action id="img" draggable="true" width="50px" height="50px" >
        <Graph icon="bi-link" />
    </Action>
    <Action class="drag" >
        <Graph icon="bi-send" />
    </Action>
    <Action class="drag" >
        <Graph icon="bi-image" />
    </Action>
    <Action class="drag" >
        <Graph icon="bi-window" />
    </Action>
    <Action class="drag" >
        <Graph icon="bi-layout-three-columns" />
    </Action>
    <Action class="drag" >
        <Graph icon="bi-textarea" />
    </Action>
    <Action class="drag" >
        <Graph icon="bi-textarea-resize" />
    </Action>
</Column>

<Action>
    <Text>View</Text>
    <Text>Model</Text>
    <Text>Action</Text>
    <Text>Policy</Text>
    <Text>Route</Text>
</Action>
{% endblock %}
{% block north %}
<Column>
<Text>View</Text>
<Text>Notice</Text>
<Text>Input</Text>
<Text>Action</Text>
<Text>Window</Text>
<Text>Panel</Text>
<Text>Text</Text>
<Text>Container</Text>
<Text>Row</Text>
<Text>Column</Text>
<Text>Graph</Text>
</Column>
{% endblock %}
{% block center %}
<Container id="tags" droppable="true" class="nested">
    <Container class="item">
        <Text style="background-color:#ccc;">View</Text>
        <Container class="nested ui-droppable ui-sortable"></Container>
    </Container>
    <Container class="item">
        <Text style="background-color:#ccc;">2</Text>
        <Container class="nested ui-droppable ui-sortable"></Container>
    </Container>
    <Container class="item">
        <Text style="background-color:#ccc;">3</Text>
        <Container class="nested ui-droppable ui-sortable"></Container>
    </Container>
</Container>
<Nav class="nav-tabs" margin="m-0" padding="p-0" color="#ededed">
    <Route href="#application" data-bs-toggle="tab"><Icon icon="bi-pass"/><Text>Application</Text></Route>
    <Route href="#framework" data-bs-toggle="tab"><Icon icon="bi-receipt"/><Text>Framework</Text></Route>
    <Route href="#infrastructure" data-bs-toggle="tab"><Icon icon="bi-journal-bookmark"/><Text>Infrastructure</Text></Route>
</Nav>
<Tab>
    <Container size="fluid" id="application">
        <Column size="fluid">
            <Container size="fluid" color="#ededed">
                <Breadcrumb padding="p-1">
                    <Select>
                        <Text>View</Text>
                        <Text>Model</Text>
                        <Text>Action</Text>
                        <Text>Policy</Text>
                        <Text>Route</Text>
                    </Select>
                    <Select class="d-inline">
                        <Text>layout</Text>
                        <Text>page</Text>
                        <Text>content</Text>
                        <Text>componenet</Text>
                    </Select>
                    <Select class="d-inline">
                        <Text>app.xml</Text>
                        <Text>stack.xml</Text>
                        <Text>cardinal.xml</Text>
                    </Select>
                </Breadcrumb>
            </Container>
            <Container size="fluid" color="#000">   
                <Text>2</Text>
            </Container>
        </Column>
    </Container>
    <Container id="framework">
        <Text>2</Text>
    </Container>
    <Container id="infrastructure">
        <Text>3</Text>
    </Container>
</Tab>
{% endblock %}
