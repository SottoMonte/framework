<?xml version="1.0" encoding="UTF-8"?>
<Row id="{% set id = '{:0=8}'.format(range(0, 99999999) | random) %}{{ id }}" padding="p-0" draggable="element" expand="dynamic" >
    <Column style="background-color:#ccc;">
        <Group type="nav" margin="m-0" padding="p-0" expand="dynamic">
            <Action route="tab:text-{{ id }}" class="d-inline-flex"><Graph icon="bi-code-slash"/></Action>
            <Action route="tab:visual-{{ id }}" class="d-inline-flex"><Graph icon="bi-binoculars"/></Action>
        </Group>
        <Action link="#framework" click="save(model:'file',path:'{{ storekeeper.result.0.path }}',target:'block-editor-{{ id }}')" ><Graph icon="bi-floppy2-fill"/></Action>
    </Column>
    <Row droppable="element" padding="p-0" expand="dynamic" >
        <Group type="tab" expand="dynamic" class="overflow-auto">
            <Container id="text-{{ id }}" expand="full" padding="p-0">
                <Text id="block-editor-{{ id }}" init="editor(target:'block-editor-{{ id }}',path:'{{ storekeeper.result.0.path }}')" class="editor h-100 border" storekeeper="result.0.content" type="editable"></Text>
            </Container>
            <Column id="visual-{{ id }}" expand="dynamic" class="overflow-auto" >
                <Row droppable="element" padding="p-0" expand="full" >
                    
                </Row>
            </Column>
        </Group>
    </Row>
</Row>