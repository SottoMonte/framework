<?xml version="1.0" encoding="UTF-8"?>
<Row id="{% set id = '{:0=8}'.format(range(0, 99999999) | random) %}{{ id }}" padding="p-0" draggable="element" size="expanded" >
    <Column style="background-color:#ccc;" alignment="center">
        <Text size="expanded" ></Text>
        <Group type="nav" margin="m-0" padding="p-0">
            <Action id="nav-1" link="#visual" data-bs-toggle="tab" class="d-inline-flex"><Graph icon="bi-eye-fill"/></Action>
            <Action id="nav-2" link="#text" data-bs-toggle="tab" class="d-inline-flex"><Graph icon="bi-code"/></Action>
        </Group>
        <Group type="nav">
            <Action link="#framework"><Graph icon="bi-floppy2-fill"/></Action>
        </Group>
    </Column>
    <Row droppable="element" padding="p-0" size="expanded" >
        <Group type="tab" size="expanded" class="overflow-auto">
            <Column id="visual" class="overflow-auto" >
                
            </Column>
            <Container id="text" size="full" padding="p-0">
                <Text id="block-editor-{{ id }}" class="editor h-100 border" type="editable">{{ text or '' }}</Text>
            </Container>
        </Group>
    </Row>
</Row>