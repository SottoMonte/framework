<?xml version="1.0" encoding="UTF-8"?>
<Group id="{{ component.id }}" type="tree" >
    <Window type="modal" id="window-create-{{ component.id }}" position="centered" size="xl" title="Create" action="create">
        <Action type="form" id="form-create" action="/create" method="POST">
            <Input type="text" identifier="model" placeholder="Name" value="file" />
            <Input type="text" identifier="repo" placeholder="Name" value="{{ storekeeper.result[0].tree.repository }}" />
            <Input type="text" identifier="file_path" placeholder="path" />
        </Action>
    </Window>
    <Window type="modal" id="window-delete-{{ component.id }}" position="centered" size="xl" title="Delete" action="delete">
        <Action type="form" id="form-delete" action="/delete" method="POST">
            <Input type="text" identifier="model" placeholder="Name" value="file" />
            <Input type="text" identifier="repo" placeholder="Name" value="{{ storekeeper.result[0].tree.repository }}" />
            <Input type="text" identifier="file_path" placeholder="path" />
        </Action>
    </Window>

    {% macro render_node(tree) %}
        {% if tree['children'] and tree['children']|length != 0 %}
            {% if tree.path == '/' or tree.path.startswith(component.attributes.path) or component.attributes.path.startswith(tree.path) %}
            <Group id="{{ tree['id'] }}" type="node" name="{{ tree['name'] }}">
                <Action type="dropdown" >
                    <Action id="maker-{{tree.id}}" draggable="window" draggable-component="window" padding="p-0" margin="m-0" value="{{tree.path}}"><Text>{{tree.name}}</Text></Action>
                    <Action alignment-content="horizontal" route="modal:window-create-{{ component.id }}"><Text padding="px-1">New folder</Text></Action>
                    <Action alignment-content="horizontal" route="modal:window-create-{{ component.id }}"><Text padding="px-1">New file</Text></Action>
                    <Action alignment-content="horizontal" route="modal:window-delete-{{ component.id }}"><Text padding="px-1">Delete</Text></Action>
                    <Action alignment-content="horizontal" route="modal:window-delete-{{ component.id }}"><Text padding="px-1">Rename folder {{tree.name}}</Text></Action>
                </Action>
                {% for child in tree['children'] %}
                    {{ render_node(child) }}
                {% endfor %}
            </Group>
            {% endif %}
        {% else %}
            {% if tree.path == '/' or tree.path.startswith(component.attributes.path) or component.attributes.path.startswith(tree.path) %}
            <Action type="dropdown" >
                <Action id="maker-{{tree.id}}" draggable="window" draggable-component="window" padding="p-0" margin="m-0" value="{{tree.path}}"><Text>{{tree.name}}</Text></Action>
                <Action alignment-content="horizontal" route="modal:window-delete-{{ component.id }}"><Text padding="px-1">Delete</Text></Action>
                <Action alignment-content="horizontal" route="modal:window-delete-{{ component.id }}"><Text padding="px-1">Clone</Text></Action>
                <Action alignment-content="horizontal" route="modal:window-delete-{{ component.id }}"><Text padding="px-1">Rename file {{tree.name}}</Text></Action>
            </Action>
            {% endif %}
        {% endif %}
    {% endmacro %}
    
    {{ render_node(storekeeper.result[0].tree) }}
</Group>