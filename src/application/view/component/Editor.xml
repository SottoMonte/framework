<?xml version="1.0" encoding="UTF-8"?>
<Container id="{% set id = '{:0=8}'.format(range(0, 99999999) | random) %}{{ attributes['id'] or id }}" >
    <!-- TabNav -->
    <Group type="nav" margin="m-0" padding="p-0" border="bottom">
        <Action link="#tab-property" data-bs-toggle="tab"><Graph icon="bi-rulers"/><Text>Property</Text></Action>
        <Action link="#tab-cont" data-bs-toggle="tab"><Graph icon="bi-bounding-box"/><Text>Matter</Text></Action>
        <Action link="#tab-style" data-bs-toggle="tab"><Graph icon="bi-palette2"/><Text>Style</Text></Action>
        <Action link="#tab-event" data-bs-toggle="tab"><Graph icon="bi-lightning-fill"/><Text>Event</Text></Action>
    </Group>
    <!-- Tab -->
    <Group type="tab" width="200px" expand="full">
        <Container id="tab-property">
                <Group type="input">
                    <Graph icon="bi-layers-half" />
                    <Input></Input>
                </Group>
                <Group type="input">
                    <Graph icon="bi-arrows" />
                    <Text>Width</Text>
                    <Input></Input>
                    <Text>px</Text>
                </Group>
                <Group type="input">
                    <Graph icon="bi-arrows-vertical" />
                    <Text>Height</Text>
                    <Input></Input>
                    <Text>px</Text>
                </Group>
                <Group type="input">
                    <Text>Expand</Text>
                    <Graph icon="bi-arrows-angle-expand" />
                    <Graph icon="bi-arrows-collapse" />
                    <Graph icon="bi-arrows-collapse-vertical" />
                    <Text>Collapse</Text>
                    <Graph icon="bi-arrows-angle-contract" />
                    <Graph icon="bi-arrows-expand" />
                    <Graph icon="bi-arrows-expand-vertical" />
                </Group>
                <Group type="input">
                    <Text>Visibility</Text>
                    <Input type="checkbox" />
                </Group>
                <Group type="input">
                    <Text>Position</Text>
                    <Row>
                        <Column><Input type="radio" /><Input type="radio" /><Input type="radio" /></Column>
                        <Column><Input type="radio" /><Input type="radio" /><Input type="radio" /></Column>
                        <Column><Input type="radio" /><Input type="radio" /><Input type="radio" /></Column>
                    </Row>
                </Group>
                <Group type="input">
                    <Row><Graph icon="bi-border-width" /><Text>Padding</Text></Row>
                    <Row><Graph icon="bi-border-outer" /><Input width="16px" height="24px"/></Row>
                    <Row><Graph icon="bi-border-bottom" /><Input width="16px" height="24px"/></Row>
                    <Row><Graph icon="bi-border-left" /><Input width="16px" height="24px"/></Row>
                    <Row><Graph icon="bi-border-right" /><Input width="16px" height="24px"/></Row>
                    <Row><Graph icon="bi-border-top" /><Input width="16px" height="24px"/></Row>
                </Group>
                <Group type="input">
                    <Row><Graph icon="bi-border-width" /><Text>Margin</Text></Row>
                    <Row><Graph icon="bi-border-outer" /><Input width="16px" height="24px"/></Row>
                    <Row><Graph icon="bi-border-bottom" /><Input width="16px" height="24px"/></Row>
                    <Row><Graph icon="bi-border-left" /><Input width="16px" height="24px"/></Row>
                    <Row><Graph icon="bi-border-right" /><Input width="16px" height="24px"/></Row>
                    <Row><Graph icon="bi-border-top" /><Input width="16px" height="24px"/></Row>
                </Group>
        </Container>
        <Container id="tab-cont">
            <Group type="input">
                <Text>Vertical</Text>
                <Graph icon="bi-align-bottom" />
                <Graph icon="bi-align-center" />
                <Graph icon="bi-align-end" />
                <Graph icon="bi bi-align-middle" />
                <Graph icon="bi-align-start" />
                <Graph icon="bi-align-top" />
            </Group>
            <Group type="input">
                <Text>Horizontal</Text>
                <Graph icon="bi-align-bottom" />
                <Graph icon="bi-align-center" />
                <Graph icon="bi-align-end" />
                <Graph icon="bi bi-align-middle" />
                <Graph icon="bi-align-start" />
                <Graph icon="bi-align-top" />
            </Group>
            <Group type="input">
                <Text>Content</Text>
                <Graph icon="bi-distribute-horizontal" />
                <Graph icon="bi-distribute-vertical" />
            </Group>
            <Group type="input">
                <Graph icon="bi-palette-fill" />
                <Input type="color" width="50px" ></Input>
            </Group>
            <Group type="input">
                <Graph icon="bi-fonts" />
                <Input type="text" width="50px" ></Input>
            </Group>
            <Group type="input">
                <Text>Size</Text>
                <Input type="text" width="50px" ></Input>
            </Group>
        </Container>
        <Container id="tab-style">
            <Column>
                <Graph icon="bi-paint-bucket" />
                <Input expand="dynamic" class="rounded-0" type="color" width="50px" />
            </Column>
            <Column>
                <Graph icon="bi-palette" />
                <Input expand="dynamic" class="rounded-0" type="color" width="50px" />
            </Column>
            <Column>
                <Graph icon="bi-bounding-box" />
                <Input expand="dynamic" class="rounded-0"/>
            </Column>
            <Column>
                <Graph icon="bi-shadows" />
                <Input expand="dynamic" class="rounded-0" type="range"/>
            </Column>
            <Column>
                <Graph icon="bi-transparency" />
                <Input class="rounded-0" type="range"/>
            </Column>
            <Column>
                <Text padding="p-1" expand="auto" >Class</Text>
                <Input class="rounded-0" />
            </Column>
            <Column expand="dynamic">
                <Graph icon="bi-bullseye" />
                <Graph icon="bi-border-outer" />
                <Graph icon="bi-border-bottom" />
                <Graph icon="bi-border-left" />
                <Graph icon="bi-border-right" />
                <Graph icon="bi-border-top" />
            </Column>
            <Column>
                <Graph icon="bi-border-width" />
                <Input width="16px" height="24px"/>
                <Input width="16px" height="24px"/>
                <Input width="16px" height="24px"/>
                <Input width="16px" height="24px"/>
                <Input width="16px" height="24px"/>
            </Column>
            <Column>
                <Graph icon="bi-border-style" />
                <Input type="select" class="form-select-sm" >
                    <Text>none</Text>
                    <Text>hidden</Text>
                    <Text>dotted</Text>
                    <Text>dashed</Text>
                    <Text>solid</Text>
                    <Text>double</Text>
                    <Text>groove</Text>
                    <Text>ridge</Text>
                    <Text>inset</Text>
                    <Text>outset</Text>
                    <Text>initial</Text>
                    <Text>inherit</Text>
                </Input>
            </Column>
        </Container>
        <Container id="tab-event" alignment-vertical="center">
            <Column>
                <Text padding="p-1" expand="auto" >init</Text>
                <Input class="rounded-0" />
            </Column>
            <Column>
                <Text padding="p-1" expand="auto" >onclick</Text>
                <Input class="rounded-0" />
            </Column>
            <Column>
                <Text padding="p-1" expand="auto" >ondblclick</Text>
                <Input class="rounded-0" />
            </Column>
            <Column>
                <Text padding="p-1" expand="auto" >onmousedown</Text>
                <Input class="rounded-0" />
            </Column>
            <Column>
                <Text padding="p-1" expand="auto" >onmousedown</Text>
                <Input class="rounded-0" />
            </Column>
            <Column>
                <Text padding="p-1" expand="auto" >onmousemove</Text>
                <Input class="rounded-0" />
            </Column>
            <Column>
                <Text padding="p-1" expand="auto" >onmouseout</Text>
                <Input class="rounded-0" />
            </Column>
            <Column>
                <Text padding="p-1" expand="auto" >onmouseover</Text>
                <Input class="rounded-0" />
            </Column>
            <Column>
                <Text padding="p-1" expand="auto" >onmouseup</Text>
                <Input class="rounded-0" />
            </Column>
        </Container>
    </Group>
</Container>