<?xml version="1.0" encoding="UTF-8"?>
<Container id="{{ component.id }}">
    <!-- TabNav -->
    <Group type="nav" margin="m-0" padding="p-0" border="bottom">
        <Action route="tab:tab-property" data-bs-toggle="tab">
            <Graph icon="bi-rulers" />
            <Text>Property</Text>
        </Action>
        <Action route="tab:tab-matter" data-bs-toggle="tab">
            <Graph icon="bi bi-grid-1x2-fill" />
            <Text>Matter</Text>
        </Action>
        <Action route="tab:tab-style" data-bs-toggle="tab">
            <Graph icon="bi-palette2" />
            <Text>Style</Text>
        </Action>
        <Action route="tab:tab-event" data-bs-toggle="tab">
            <Graph icon="bi-lightning-fill" />
            <Text>Event</Text>
        </Action>
    </Group>
    <!-- Tab -->
    <Group type="tab" width="285px">
        <!-- Property -->
        <Container id="tab-property">
            <Group type="input">
                <Graph icon="bi-layers-half" />
                <Input type="select" value="{{info|get('index')}}">
                    <Text>Auto</Text>
                    <Text>Background</Text>
                    <Text>Content</Text>
                    <Text>Navbar</Text>
                    <Text>Dropdown</Text>
                    <Text>Tooltip</Text>
                    <Text>Sidebar</Text>
                    <Text>Modal</Text>
                    <Text>Overlay</Text>
                    <Text>Notification</Text>
                    <Text>Critical</Text>
                </Input>
            </Group>
            <Group type="input">
                <Graph icon="bi-arrows" />
                <Input id="{{ component.id }}-width" identifier="width" value="{{info|get('width')}}" click="editor.replace_tag" placeholder="width"/>
                <Input type="select" width="70px" value="%">
                    {% for unit in ['px','%'] %}
                    <Text>{{unit}}</Text>
                    {% endfor %}
                </Input>
            </Group>
            <Group type="input">
                <Graph icon="bi-arrows-vertical" />
                <Input value="{{info|get('height')}}" placeholder="height" click="editor.replace_tag" />
                <Input type="select" width="70px" value="{{info|get('height')}}">
                    <Text>px</Text>
                    <Text>%</Text>
                    <Text>enum</Text>
                </Input>
            </Group>
            <Group type="input">
                <Graph icon="bi-arrows-move" />
                <Graph icon="bi-arrows-angle-contract" />
                <Graph icon="bi-arrows-collapse" />
                <Graph icon="bi-arrows-collapse-vertical" />
                <Graph icon="bi-arrows-angle-expand" />
                <Graph icon="bi-arrows-expand" />
                <Graph icon="bi-arrows-expand-vertical" />
            </Group>
            <Group type="input">
                <Graph icon="bi-bounding-box" />
                <Container expand="dynamic" class="position-relative" height="200px" margin="m-1">
                    <!-- 16 posizioni radio -->
                    <Input type="radio" identifier="position" class="position-absolute top-0 start-0" />
                    <Input type="radio" identifier="position" class="position-absolute top-0 start-50" />
                    <Input type="radio" identifier="position" class="position-absolute top-0 end-0" />
                    <Input type="radio" identifier="position" class="position-absolute top-0 end-50" />
                    <Input type="radio" identifier="position" class="position-absolute top-50 start-0" />
                    <Input type="radio" identifier="position" class="position-absolute top-50 start-50" />
                    <Input type="radio" identifier="position" class="position-absolute top-50 end-0" />
                    <Input type="radio" identifier="position" class="position-absolute top-50 end-50" />
                    <Input type="radio" identifier="position" class="position-absolute bottom-0 start-0" />
                    <Input type="radio" identifier="position" class="position-absolute bottom-0 start-50" />
                    <Input type="radio" identifier="position" class="position-absolute bottom-0 end-0" />
                    <Input type="radio" identifier="position" class="position-absolute bottom-0 end-50" />
                    <Input type="radio" identifier="position" class="position-absolute bottom-50 start-0" />
                    <Input type="radio" identifier="position" class="position-absolute bottom-50 start-50" />
                    <Input type="radio" identifier="position" class="position-absolute bottom-50 end-0" />
                    <Input type="radio" identifier="position" class="position-absolute bottom-50 end-50" />
                </Container>
            </Group>
            <Group type="input">
                <Graph icon="bi-border" />
                <Graph expand="dynamic" icon="bi-border-outer" />
                <Graph expand="dynamic" icon="bi-border-bottom" />
                <Graph expand="dynamic" icon="bi-border-left" />
                <Graph expand="dynamic" icon="bi-border-right" />
                <Graph expand="dynamic" icon="bi-border-top" />
            </Group>
            <Group type="input">
                <Graph icon="bi-border-width" />
                <Input expand="dynamic" placeholder="border-top" value="{{info|get('border_top')}}" />
                <Input expand="dynamic" placeholder="border-right" value="{{info|get('border_right')}}" />
                <Input expand="dynamic" placeholder="border-bottom" value="{{info|get('border_bottom')}}" />
                <Input expand="dynamic" placeholder="border-left" value="{{info|get('border_left')}}" />
                <Input expand="dynamic" placeholder="border-all" value="{{info|get('border_all')}}" />
            </Group>
        </Container>
        <!-- Matter -->
        <Container id="tab-matter">
            <Group type="input">
                <Graph icon="bi-fingerprint" />
                <Input placeholder="id" value="{{info|get('id')}}" />
            </Group>
            <Group type="input">
                <Graph icon="bi-fingerprint" />
                <Input placeholder="identifier" value="{{info|get('identifier')}}" />
            </Group>
            <Group type="input">
                <Graph icon="bi-tag" />
                <Input type="select" id="{{ component.id }}-tag" identifier="tag" expand="dynamic" class="rounded-0" value="{{info|get('tag')}}">
                <Text>{{info|get('tag')}}</Text>
                {% for tag in ['Layout','View','Presenter','Messenger','Storekeeper','Input','Action','Window','Icon','Text','Group','Media'] %}
                    {% if info|get('tag') != tag %}
                        <Text>{{tag}}</Text>
                    {% endif %}
                {% endfor %}
                </Input>
            </Group>
            <Group type="input">
                <Graph icon="bi-ui-checks" />
                <Input placeholder="value" value="{{info|get('type')}}" />
            </Group>
            <Group type="input">
                <Graph icon="bi-input-cursor-text" />
                <Input placeholder="value" value="{{info|get('value')}}" />
            </Group>
            {% if info|get('tag') == 'Text' %}
            <Group type="input">
                <Graph icon="bi bi-type" />
                <Action><Graph icon="bi-type-bold" /></Action>
                <Action><Graph icon="bi-type-italic" /></Action>
                <Action><Graph icon="bi-type-underline" /></Action>
                <Action><Graph icon="bi-type-strikethrough" /></Action>
            </Group>
            <Group type="input">
                <Graph icon="bi-body-text" />
                <Action><Graph icon="bi-text-left" /></Action>
                <Action><Graph icon="bi-text-center" /></Action>
                <Action><Graph icon="bi-text-right" /></Action>
                <Action><Graph icon="bi-text-wrap" /></Action>
            </Group>
            <Group type="input">
                <Graph icon="bi bi-type" />
                <Action><Graph icon="bi-paragraph" /></Action>
                <Action><Graph icon="bi-type-h1" /></Action>
                <Action><Graph icon="bi-type-h2" /></Action>
                <Action><Graph icon="bi-type-h3" /></Action>
                <Action><Graph icon="bi-type-h4" /></Action>
                <Action><Graph icon="bi-type-h5" /></Action>
                <Action><Graph icon="bi-type-h6" /></Action>
            </Group>
            {% endif %}
            <Group type="input">
                <Graph icon="bi-symmetry-horizontal" />
                {% for align in [('start','bi-align-start'), ('center','bi-align-center'), ('end','bi-align-end'), ('stretch','bi-align-middle') ] %}
                    {% if info|get('alignment-horizontal') == align[0] %}
                        <Graph expand="dynamic" icon="{{align[1]}}" color="#fff" />
                    {% else %}
                        <Graph expand="dynamic" icon="{{align[1]}}" />
                    {% endif %}
                {% endfor %}
            </Group>
            <Group type="input">
                <Graph icon="bi-symmetry-vertical" />
                {% for align in [('start','bi-align-top'), ('center','bi-align-middle'), ('end','bi-align-bottom'), ('stretch','bi-align-middle') ] %}
                    {% if info|get('alignment-vertical') == align[0] %}
                        <Icon expand="dynamic" name="{{align[1]}}" color="#fff" />
                    {% else %}
                        <Icon expand="dynamic" name="{{align[1]}}" />
                    {% endif %}
                {% endfor %}
            </Group>
            <Group type="input">
                <Graph icon="bi-binoculars-fill" />
                <Graph expand="dynamic" icon="bi-distribute-horizontal" />
                <Graph expand="dynamic" icon="bi-distribute-vertical" />
            </Group>
        </Container>
        <!-- Style -->
        <Container id="tab-style">
            <Column>
                <Group type="input" expand="dynamic">
                    <Graph icon="bi-paint-bucket" />
                    <Input expand="dynamic" type="color" value="{{info|get('background')}}" placeholder="background"/>
                </Group>
                <Group type="input" expand="dynamic">
                    <Graph icon="bi-border-style" />
                    <Input expand="dynamic" type="color" value="{{info|get('color')}}" placeholder="color"/>
                </Group>
                <Group type="input" expand="dynamic">
                    <Graph icon="bi-highlighter" />
                    <Input expand="dynamic" class="rounded-0" type="color" value="{{info|get('color')}}" placeholder="text color"/>
                </Group>
            </Column>
            <Group type="input">
                <Graph tooltip="class or tag" icon="bi-tag-fill" />
                <Input class="rounded-0" value="{{info|get('class')}}" placeholder="class"/>
            </Group>
            <Group type="input">
                <Graph icon="bi-fonts" />
                <Input type="select" expand="dynamic" class="rounded-0" value="{{info|get('font-style')}}">
                    <Text style="font-family: Arial;">Arial</Text>
                    <Text style="font-family: Helvetica;">Helvetica</Text>
                    <Text style="font-family: Verdana;">Verdana</Text>
                    <Text style="font-family: Tahoma;">Tahoma</Text>
                    <Text style="font-family: 'Trebuchet MS';">Trebuchet MS</Text>
                    <Text style="font-family: 'Times New Roman';">Times New Roman</Text>
                    <Text style="font-family: Georgia;">Georgia</Text>
                    <Text style="font-family: Garamond;">Garamond</Text>
                    <Text style="font-family: 'Courier New';">Courier New</Text>
                    <Text style="font-family: 'Lucida Console';">Lucida Console</Text>
                    <Text style="font-family: Monaco;">Monaco</Text>
                    <Text style="font-family: Consolas;">Consolas</Text>
                    <Text style="font-family: 'Comic Sans MS';">Comic Sans MS</Text>
                    <Text style="font-family: Impact;">Impact</Text>
                    <Text style="font-family: 'Palatino Linotype';">Palatino Linotype</Text>
                    <Text style="font-family: 'Segoe UI';">Segoe UI</Text>
                    <Text style="font-family: Roboto;">Roboto</Text>
                    <Text style="font-family: 'Open Sans';">Open Sans</Text>
                    <Text style="font-family: Lato;">Lato</Text>
                    <Text style="font-family: Montserrat;">Montserrat</Text>
                    <Text style="font-family: 'Source Sans Pro';">Source Sans Pro</Text>
                    <Text style="font-family: Ubuntu;">Ubuntu</Text>
                    <Text style="font-family: Raleway;">Raleway</Text>
                    <Text style="font-family: Nunito;">Nunito</Text>
                </Input>
            </Group>
            <Group type="input">
                <Graph icon="bi-paragraph" />
                <Input expand="dynamic" class="rounded-0" value="{{info|get('font_size')}}" placeholder="font size"/>
                <Input type="select" width="70px" value="{{info|get('font_size_unit')}}">
                    <Text>px</Text>
                    <Text>%</Text>
                    <Text>enum</Text>
                </Input>
            </Group>
            <Group type="input">
                <Graph icon="bi-shadows" />
                <Input expand="dynamic" class="rounded-0" type="range" min="0" max="3" value="{{info|get('shadow')}}" placeholder="shadow"/>
            </Group>
            <Group type="input">
                <Graph icon="bi-transparency" />
                <Input expand="dynamic" class="rounded-0" type="range" min="0" step="25" max="100" value="{{info|get('opacity')}}" placeholder="opacity"/>
            </Group>
            <Group type="input">
                <Graph icon="bi-asterisk" />
                <Input class="rounded-0" value="{{info|get('custom')}}" placeholder="custom"/>
            </Group>
            <Group type="input">
                <Graph icon="bi-border" />
                <Graph expand="dynamic" icon="bi-border-outer" />
                <Graph expand="dynamic" icon="bi-border-bottom" />
                <Graph expand="dynamic" icon="bi-border-left" />
                <Graph expand="dynamic" icon="bi-border-right" />
                <Graph expand="dynamic" icon="bi-border-top" />
            </Group>
            <Group type="input">
                <Graph icon="bi-border-width" />
                <Input expand="dynamic" placeholder="border-top" value="{{info|get('border-top')}}" />
                <Input expand="dynamic" placeholder="border-right" value="{{info|get('border-right')}}" />
                <Input expand="dynamic" placeholder="border-bottom" value="{{info|get('border-bottom')}}" />
                <Input expand="dynamic" placeholder="border-left" value="{{info|get('border-left')}}" />
                <Input expand="dynamic" placeholder="border-all" value="{{info|get('border-all')}}" />
            </Group>
            <Group type="input">
                <Graph icon="bi-border-style" />
                <Input type="select" class="form-select-sm" value="{{info|get('border-style')}}">
                    <Text>None</Text>
                    <Text>solid</Text>
                    <Text>hidden</Text>
                    <Text>dotted</Text>
                    <Text>dashed</Text>
                    <Text>double</Text>
                    <Text>groove</Text>
                    <Text>ridge</Text>
                    <Text>inset</Text>
                    <Text>outset</Text>
                    <Text>initial</Text>
                    <Text>inherit</Text>
                </Input>
            </Group>
        </Container>
        <!-- Event -->
        <Container id="tab-event" alignment-vertical="center" expand="horizontal">
            <Group type="accordion">
                <!-- Window -->
                <Action><Text>Window</Text></Action>
                <Container>
                    <Group type="input">
                        <Graph icon="bi-window" />
                        <Input placeholder="onresize" value="{{info|get('onresize')}}" />
                    </Group>
                </Container>
                <!-- Mouse -->
                <Action><Text>Mouse</Text></Action>
                <Container>
                    <Group type="input">
                        <Graph icon="bi-mouse" />
                        <Input placeholder="onclick" value="{{info|get('click')}}" />
                    </Group>
                    <Group type="input">
                        <Graph icon="bi-mouse" />
                        <Input placeholder="ondblclick" value="{{info|get('dblclick')}}" />
                    </Group>
                    <Group type="input">
                        <Graph icon="bi-mouse" />
                        <Input placeholder="onmousedown" value="{{info|get('mousedown')}}" />
                    </Group>
                    <Group type="input">
                        <Graph icon="bi-mouse" />
                        <Input placeholder="onmousemove" value="{{info|get('mousemove')}}" />
                    </Group>
                    <Group type="input">
                        <Graph icon="bi-mouse" />
                        <Input placeholder="onmouseout" value="{{info|get('mouseout')}}" />
                    </Group>
                    <Group type="input">
                        <Graph icon="bi-mouse" />
                        <Input placeholder="onmouseover" value="{{info|get('mouseover')}}" />
                    </Group>
                    <Group type="input">
                        <Graph icon="bi-mouse" />
                        <Input placeholder="onmouseup" value="{{info|get('mouseup')}}" />
                    </Group>
                    <Group type="input">
                        <Graph icon="bi-mouse" />
                        <Input placeholder="onwheel" value="{{info|get('wheel')}}" />
                    </Group>
                </Container>
                <!-- Keyboard -->
                <Action><Text>Keyboard</Text></Action>
                <Container>
                    <Group type="input">
                        <Graph icon="bi-keyboard" />
                        <Input placeholder="onkeydown" value="{{info|get('keydown')}}" />
                    </Group>
                </Container>
                <!-- Input -->
                <Action><Text>Input</Text></Action>
                <Container>
                    <Group type="input">
                        <Graph icon="bi-input-cursor" />
                        <Input placeholder="oninput" value="{{info|get('input')}}" />
                    </Group>
                </Container>
                <!-- Drag -->
                <Action><Text>Drag</Text></Action>
                <Container>
                    <Group type="input">
                        <Graph icon="bi-arrows-move" />
                        <Input placeholder="ondrag" value="{{info|get('drag')}}" />
                    </Group>
                </Container>
                <!-- Clipboard -->
                <Action><Text>Clipboard</Text></Action>
                <Container>
                    <Group type="input">
                        <Graph icon="bi-clipboard" />
                        <Input placeholder="oncopy" value="{{info|get('copy')}}" />
                    </Group>
                </Container>
                <!-- Special -->
                <Action><Text>Special</Text></Action>
                <Container>
                    <Group type="input">
                        <Graph icon="bi-router" />
                        <Input placeholder="oncopy" value="{{info|get('route')}}" />
                    </Group>
                </Container>
                <!-- Media -->
                <Action><Text>Media</Text></Action>
                <Container>
                    <Group type="input">
                        <Graph icon="bi-collection" />
                        <Input placeholder="onplay" value="{{info|get('play')}}" />
                    </Group>
                </Container>
            </Group>
        </Container>
    </Group>
</Container>