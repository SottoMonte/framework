<?xml version="1.0" encoding="UTF-8"?>
<Container id="{{ component.id }}" padding="p-2" background="#{{ component.attributes.color }}" draggable-component="Note" draggable-event="note(target:'{{ component.id }}')" draggable="note-inner">
    <Column>
        <Text>{{ component.attributes.title }}</Text>
    </Column>
    <Text>{{ component.attributes.text }}</Text>
    <Container droppable="note-inner" expand="dynamic" padding="p-2" border=" border" >
        {{ inner }}
    </Container>
</Container>